{
    "compilerOptions": {
        "module": "ESNext",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "declaration": true
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}
